<h1><%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2>
<ul>
  <h2>Appointments:</h2>
  <% @doctor.appointments.each do |appointment| %>
  <%#Month DD, YYYY at H:MM%>
  <li>Time: <%= appointment.appointment_datetime.strftime("%B %d, %Y at %-k:%M")%> with <%= link_to(appointment.patient.name, appointment.patient) %></li> 
  <% end %>
</ul>