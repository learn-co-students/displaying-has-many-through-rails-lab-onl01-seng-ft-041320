<h1><%= @doctor.name %></h1>
<br>
Department:<br>
<%= @doctor.department %>

<br></br>

Appointments:<br>
<ul>
    <% @doctor.appointments.each do |appt| %>
        <li> <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></li>
        with: <%= link_to appt.patient.name, patient_path(appt.patient) %>
        <br></br>

    <% end %>





