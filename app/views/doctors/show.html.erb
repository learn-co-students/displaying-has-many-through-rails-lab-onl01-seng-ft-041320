<h2>Doctor</h2>

<%= @doctor.name %> <br>
<%= @doctor.department %> <br>
<% @doctor.appointments.each do |appointment| %>
<%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> | <%= link_to appointment.patient.name, patient_path(appointment.patient_id), method: :get %> <br>
<% end %>